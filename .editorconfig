; top-most EditorConfig file
root = true

; Global EditorConfig
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

; Python EditorConfig
[*.{py,python}]
indent_style = space
indent_size = 4
max_line_length = 120

; IA EditorConfig
[*.{ipynb}]
indent_style = space
indent_size = 4
max_line_length = 120
